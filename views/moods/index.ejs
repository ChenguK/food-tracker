<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Satisfy&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Baloo&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
        integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <title>moods</title>
</head>


<body class="container moodindexbg">
    <div class="navbar-fixed">
        <nav class="navbar navbar-light" style="background-color: rgb(99, 133, 185);">
            <h1>moods</h1>
            <ul>
                <div class="user-log">
                    <h5>Welcome <%= user.name %>!</h5>
                    <li style="color: white text-style='none'">
                        <% if (user) { %>
                        <a href="/logout"><i class="material-icons left">trending_flat</i>Log Out</a>
                        <% } else { %>
                        <a href="/auth/google"> <i class="material-icons left">vpn_key</i>Login with Google</a>
                        <% } %>
                </div>
                </li>

            </ul>
    </div>
    </form>
    </nav>
    </div>
    <h3>How's your mood today?</h3>

    <h4><a class="dashboardbtn" style="color: rgb(255, 255, 255);" href="/moods/new">Click here</a> to share!</h4>
    <div id="moods-index">

        <br>
        <% moods.forEach(function(mood) { %>
        <div class="card">
            <div class="mood-title">
                <img class="indeximg" src="<%= mood.user[0].avatarURL %>" alt="user profile" width="50px" height="50px">
                <div class="mood-header">
                    <div class="mood-name"><%= mood.user[0].name %></div>
                    <ul class="collection">
                        <li>
                            <h5><u><%= mood.title %></u></h5>
                </div>
            </div>
            <div class="card-content">
                <div class="icons">
                    <%if (mood.user[0]._id.equals(user && user._id)) { %>
                    <a href="moods/<%= mood._id %>/edit">✏️</a> &nbsp;&nbsp;
                    <form action="/moods/<%= mood._id %>?_method=DELETE" method="POST">
                        <small><button type="submit" style=background-color:red>
                                X
                            </button></small></form>
                    <% } %>
                </div>
                <br>
                <a class="comment-link" href="/moods/<%= mood._id%>">Comments</a>
            </div>
            </li>
            </ul>
        </div>
    </div>
    <% }) %>
    </div>
    </div>
</body>

</html>