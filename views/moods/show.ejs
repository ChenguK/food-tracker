        % if(recentUpload) { %>
        <h2>Most Recent Upload:</h2>
        <img src="<
            %= recentUpload %>" alt="Recent Upload"> -->
    <% } %>

    <!--<div><img src="<
        %= image %>"></div> -->
    <!-- < % } %> -->
    <br>
    <div class="comments">
        <form action="/moods/<%= mood._id%>/comments" method="POST">
            <label>Comments
                <input type="text" name="comment">
                <input type="submit">
            </label>
        </form>
        <ul>
            <% if(comments.length) { %>
            <% comments.forEach(c => { %>
            <li><%= c.userId.name %> <%= c.comment %></li>
            <% }) %>
        </ul>
        <% } else { %>
        <h3> No Comments Yet</h3>
        <% } %>
    </div>